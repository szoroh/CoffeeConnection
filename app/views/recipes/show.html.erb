<div class="container">
  <div class="row justify-content-md-center">

    <div class="background-grid">
      <div class="col-md-auto">
        <b>Coffee: </b><%= @recipe.coffee %>
          <br>
        <b>Quantity: </b><%= @recipe.quantity %>g
          <br>
        <b>Method: </b><%= @recipe.method %>
      </div>
