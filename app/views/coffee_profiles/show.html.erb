<center><h1><strong><%= @coffee_profile. name %> - <%= @coffee_profile.roasters %> - Profile</strong></h1></center>
  <br>
<div class="container">
  <div class="row justify-content-md-center">

    <div class="background-grid">
      <div class="col-md-auto">
        <b><%= @coffee_profile.name %> <%= @coffee_profile.roasters %></b>
        - <%= @coffee_profile.package_quantity %>g
      </div>
    </div>

    <div class="w-100 d-none d-lg-block"></div>
    <br>

    <div class="row justify-content-md-center">
      <div class="background-grid">
        <div class="col-md-auto">
          <b>Description: </b><%= @coffee_profile.description %>
        </div>
      </div>
    </div>

    <div class="w-100 d-none d-lg-block"></div>
    <br>

    <div class="row justify-content-md-center">
      <div class="background-grid">
        <div class="col-md-auto">
          <b><center>Details</center></b>
            <br>
          <b>Beans origin country: </b><%= @coffee_profile.beans_origin_country %>
            <br>
          <b>Cultivation altitude: </b><%= @coffee_profile.cultivation_altitude %>
            <br>
          <b>Region: </b><%= @coffee_profile.region %>
            <br>
          <b>Farm: </b><%= @coffee_profile.farm %>
            <br>
          <b>Treatment method: </b><%= @coffee_profile.treatment_method %>
            <br>
          <b>Variety: </b><%= @coffee_profile.variety %>
            <br>
          <b>Arabica: </b><%= @coffee_profile.arabica %>
            <br>
          <b>Robusta: </b><%= @coffee_profile.robusta %>
            <br>
          <b>Roast: </b><%= @coffee_profile.roast %>
        </div>
      </div>
    </div>

    <div class="w-100 d-none d-lg-block"></div>
    <br>

    <div class="row justify-content-md-center">
      <div class="background-grid">
        <div class="col-md-auto">
          <b>Mark: </b><%= @coffee_profile.mark %> / 5
        </div>
      </div>
    </div>
  </div>
</div>

<center>Created at: <%= @coffee_profile.created_at %></center>

<div class="w-100 d-none d-lg-block"></div>
<br>

<div class="container-fluid">
  <table class="table-striped">
    <thead>
      <th>Coffee</th>
      <th>Quantity</th>
      <th>Method</th>
      <th>Water temperature</th>
      <th>Water amount</th>
      <th>Grind</th>
      <th>Aroma</th>
      <th>Aroma points</th>
      <th>Taste</th>
      <th>Taste points</th>
      <th>Body</th>
      <th>Body points</th>
      <th>Astringency</th>
      <th>Astringency points</th>
    </thead>
    <% @coffee_profile.recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.coffee %></td>
        <td><%= recipe.quantity %></td>
        <td><%= recipe.method %></td>
        <td><%= recipe.water_temperature %></td>
        <td><%= recipe.water_amount %></td>
        <td><%= recipe.grind %></td>
        <td><%= recipe.aroma %></td>
        <td><%= recipe.aroma_points %></td>
        <td><%= recipe.taste %></td>
        <td><%= recipe.taste_points %></td>
        <td><%= recipe.body %></td>
        <td><%= recipe.body_points %></td>
        <td><%= recipe.astringency %></td>
        <td><%= recipe.astringency_points %></td>
      </tr>
    <% end %>
  </table>
</div>

<center>
  <%= link_to 'Create new recipe for your coffee!', new_coffee_profile_recipe_path(@coffee_profile) %>
</center>

